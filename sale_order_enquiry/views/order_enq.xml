<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_order_enq_form" model="ir.ui.view">
        <field name="name">view_order_enq_form</field>
        <field name="model">order.enq</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_confirm" type="object" string="Confirm" class="btn-primary"
                                attrs="{'invisible': [('state', 'in', ('confirm', 'cancel'))]}"/>
                    <button name="button_cancel" type="object" string="Cancel" class="btn-secondary"
                                attrs="{'invisible': [('state', 'in', ('confirm', 'cancel'))]}"/>
                    <button name="button_multi_orders" type="object" string="Recreate Sales" class="btn-primary"
                                attrs="{'invisible': [('multi_order', '=', False)]}"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button icon="fa-eye" type="object" string="View Sales" class="oe_stat_button" name="view_sale_order"
                                attrs="{'invisible': [('sale_order_id', '=', False)]}">
                                <field name="sale_count" widget="statinfo" string="View sales"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Confirm" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                    <widget name="web_ribbon" title="Pending" bg_color="bg-info" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                    <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <widget name="web_ribbon" title="Multi" bg_color="bg-success" attrs="{'invisible': [('sale_count', '&lt;=', 1)]}"/>
                    <div class="oe_title">
                        <lable for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group col="3">
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', 'in', ('confirm', 'cancel'))]}"/>
                            <field name="company_id" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="state" invisible="1"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="date_order"/>
                            <field name="sale_order_id" nolable="1" readonly="1" attrs="{'invisible': ['|', ('sale_order_id', '=',False),('multi_order', '=',True)]}"/>
                            <field name="sale_order_ids" nolable="1" readonly="1" widget="many2many_tags" attrs="{'invisible': [('multi_order', '=',False)]}"/>
                            <field name="multi_order" nolable="1" attrs="{'invisible': [('state', 'in', ('pending', 'cancel'))]}"/>
                            <field name="amount_untaxed" invisible="1"/>
                            <field name="amount_tax" invisible="1"/>
                            <field name="amount_total" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="order_line" string="Order Line">
                            <button type="object" string="Add Lines"  name="button_add_line_from_sales"
                                attrs="{'invisible': [('state', 'in', ('confirm', 'cancel'))]}">
                            </button>
                            <field name="order_line_ids" attrs="{'readonly': [('state', 'in', ('confirm', 'cancel'))]}" mode="tree"
                                   widget="section_and_note_one2many" nolable="1">
                                <tree editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                    </control>
                                    <field name="sequence" widget="handle"/>
                                    <field name="display_type" invisible="1"/>
                                    <field name="product_id" widget="product_configurator"/>
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="price_unit"/>
                                    <field name="product_uom"/>
                                    <field name="product_uom_qty"/>
                                    <field name="tax_id" widget="many2many_tags"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="company_id" optional="hide"/>
                                    <field name="sale_order_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="price_tax" invisible="1"/>
                                    <field name="price_total" invisible="1"/>
                                </tree>
                            </field>

                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>
                                </group>
                                <div class="clearfix"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_order_enq_product_line_form" model="ir.ui.view">
        <field name="name">view_order_enq_product_line_form</field>
        <field name="model">order.enq.lines</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <field name="sale_order_id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="price_tax" invisible="1"/>
                        <field name="price_total" invisible="1"/>
                        <field name="sequence" invisible="1"/>
                        <field name="display_type" invisible="1"/>
                        <group>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="price_unit"/>
                            <field name="product_uom"/>
                        </group>
                        <group>
                            <field name="product_uom_qty"/>
                            <field name="tax_id" widget="many2many_tags"/>
                            <field name="price_subtotal" widget="monetary"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_order_enq_tree_view" model="ir.ui.view">
        <field name="name">Order Enquiry Tree View</field>
        <field name="model">order.enq</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name" widget="section_and_note_text"/>
                    <field name="partner_id"/>
                    <field name="create_date" optional="show"/>
                    <field name="date_order" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="company_id" optional="show"/>
                    <field name="amount_untaxed" optional="hide"/>
                    <field name="amount_tax" optional="hide"/>
                    <field name="amount_total" string="Total" widget="monetary" sum="Total Amount"/>
                    <field name="state"/>
                    <field name="sale_order_id" invisible="1"/>
                    <field name="display_type" invisible="1"/>
                </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_order_enquirey">
            <field name="name">Order Enquiry</field>
            <field name="res_model">order.enq</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="view_order_enq_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create  Order Enquiry
                </p>
            </field>
        </record>

    <record id="saleorder_form_inherit" model="ir.ui.view">
        <field name="name">Sale order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']" position="before">
                <button name="button_add_line_from_sales" style="margin-top: -1%;margin-left: 42%;" type="object"  string="Add Lines"
                        class="btn-primary" attrs="{'invisible' : ['|', ('state', 'not in', ('draft', 'sent')), ('order_enquirey_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//group[1]" position="attributes">
                <attribute name="col">3</attribute>
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <group attrs="{'invisible': [('order_enquirey_id', '=',False)]}">
                    <field name="order_enquirey_id" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_tmpl_tree_inherit" model="ir.ui.view">
        <field name="name">Product Template</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <button name="button_add_sales_line" type="object"
                        class="fa fa-list"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_kanban_view_inherit" model="ir.ui.view">
        <field name="name">Product Template</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="after">
                <button name="button_add_sales_line" type="object"
                        class="fa fa-list"/>
            </xpath>
        </field>
    </record>



    <menuitem id="menu_order_enq"
              name="Order Enquiry"
              action="action_order_enquirey"
              parent="sale.sale_order_menu"/>


</odoo>